<!DOCTYPE html>
<html lang="vi">
<head>
    <!--Meta tags-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!--Tiêu đề-->
    <title>@ViewData["Title"] - SUrPic</title>

    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css2?family=Jost:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- CSS Stylesheet -->
    <link rel="stylesheet" href="/css/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SUrPic.styles.css" asp-append-version="true" />

    <!-- fontawesome v5 -->
    <script src="https://kit.fontawesome.com/af562a2a63.js" crossorigin="anonymous"></script>

    <!--script-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    @inject IHttpContextAccessor _context;

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!--Logo-->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight:700; color:#4d61fc;font-size:xx-large">SUrPic</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!--Thanh điều hướng-->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!--Trang chủ-->
                        <li id="home" class="nav-item" style="border-radius: 10px;">
                            <a id="cHome" style="color:black; font-weight:700" class="nav-link" href="/">Trang chủ</a>
                        </li>

                        <!--Tìm kiếm-->
                        <li id="search" class="nav-item" style="border-radius: 10px;">
                            <a id="cSearch" style="color:black; font-weight:700" class="nav-link" href="/search">Tìm kiếm</a>
                        </li>
                    </ul>
                    <ul id="beforeLogin" class="navbar-nav flex-grow-1 justify-content-end" style="margin-right:auto">
                        <!--Đăng nhập-->
                        <li id="login" class="nav-item" style="border-radius: 10px;background-color:#4d61fc;">
                            <a id="cLogin" style="color:white; font-weight:700; text-decoration:underline;" class="nav-link" href="/login">Đăng Nhập</a>
                        </li>

                        <!--Đăng ký-->
                        <li id="register" class="nav-item" style="border-radius: 10px;">
                            <a id="cRegister" style="color:black; font-weight:700;text-decoration:underline;" class="nav-link" href="/register">Đăng Ký</a>
                        </li>
                    </ul>
                    <ul id="afterLogin" class="navbar-nav flex-grow-1 justify-content-end" style="margin-right:auto;display:none">
                        <!--Quan tâm-->
                        <li id="follow" class="nav-item" style="border-radius: 10px;">
                            <a id="cFollow" style="color:black; font-weight:700;" class="nav-link" href="/follow">Quan tâm</a>
                        </li>
                        
                        <!--Trang cá nhân-->
                        <li id="profile" class="nav-item" style="border-radius: 10px;background-color:#4d61fc;">
                            <a id="cProfile" style="color:white; font-weight:700; text-decoration:underline;" class="nav-link" href="/profile/@_context.HttpContext.Session.GetString("username")">
                                <span class="fas fa-user" style="padding-right:5px"></span>@_context.HttpContext.Session.GetString("username")</a>
                        </li>
                    </ul>

                </div>

            </div>
        </nav>
    </header>
    <div style="padding:0;margin:0;width:100%">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        //Cập nhật thanh điều hướng
        if (document.getElementById("pIndex")) { //Trang chủ
            document.getElementById("home").style.backgroundColor = "#4d61fc";
            document.getElementById("cHome").style.color="white";
        }else{
            document.getElementById("home").style.backgroundColor = "white";
            document.getElementById("cHome").style.color = "black";
        }
        if (document.getElementById("pSearch")) {//Tìm kiếm
            document.getElementById("search").style.backgroundColor = "#4d61fc";
            document.getElementById("cSearch").style.color = "white";
        } else {
            document.getElementById("search").style.backgroundColor = "white";
            document.getElementById("cSearch").style.color = "black";
        }
        if (document.getElementById("pFollow")) {//Quan tâm
            document.getElementById("follow").style.backgroundColor = "#4d61fc";
            document.getElementById("cFollow").style.color = "white";
        } else {
            document.getElementById("follow").style.backgroundColor = "white";
            document.getElementById("cFollow").style.color = "black";
        }
        if (document.getElementById("pLogin")) {//Đăng nhập
            document.getElementById("login").style.display = "none";
            document.getElementById("register").style.backgroundColor = "#4d61fc";
            document.getElementById("cRegister").style.color = "white";
        } else {
            document.getElementById("login").style.display = "block";
            document.getElementById("register").style.backgroundColor = "white";
            document.getElementById("cRegister").style.color = "black";
        }
        if (document.getElementById("pRegister")) {//Đăng ký
            document.getElementById("register").style.display = "none";
        } else {
            document.getElementById("register").style.display = "block";
        }
    </script>

    <!--Cập nhật giao diện trước/sau đăng nhập-->
    @if (_context.HttpContext.Session.GetString("username") != null)
    {
        <script>
            document.getElementById("afterLogin").style.display="flex";
            document.getElementById("beforeLogin").style.display = "none";
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
