
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="pLogin" class="container">
    <!-- logo -->
    <div class="logo">
        <a class="brand-logo" style="font-weight:700; color:#4d61fc;font-size:xx-large;text-decoration:none" href="../../">SUrPic</a>
    </div>
    <!-- //logo -->

    <div class="forms-grid">
        <!-- login -->
        <div class="login">
            <span class="fas fa-sign-in-alt"></span>
            <strong>Đăng nhập</strong>

            <form asp-action="Verify" asp-controller="Account" method="post" class="login-form" onsubmit="return validateForm()">
                <fieldset>
                    <div class="form">
                        <!--Tên đăng nhập-->
                        <div class="form-row">
                            <label class="form-label" for="input">Tên đăng nhập</label>
                            <input id="user" name="userName" type="text" class="form-text">
                            <p id="warnUserNull" class="alert alert-danger" style="display:none">*Không thể để trống tên đăng nhập</p>
                        </div>

                        <!--Mật khẩu-->
                        <div class="form-row">
                            <span id="showPass" class="fas fa-eye"></span>
                            <label class="form-label" for="input">Mật khẩu</label>
                            <input id="pass" name="password" type="password" class="form-text">
                            <p id="warnPassNull" class="alert alert-danger" style="display:none">*Không thể để trống mật khẩu</p>
                        </div>

                        <!--Nút đăng nhập-->
                        <div class="form-row button-login">
                            <button style="border:none;border-radius:5px;color:white;background-color:#4d61fc;font-weight:700">
                                Đăng nhập <span class="fas fa-arrow-right" style="color:#ffffff"></span></button>
                        </div>

                        <!--Nếu đăng nhập thất bại-->
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger" style="color:red">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                    </div>
                </fieldset>
            </form>

        </div>
        <!-- //login -->
    </div>
</div>

<script>
    var user = document.getElementById("user");
    var pass = document.getElementById("pass");
    var shPass = document.getElementById("showPass");

    //Hiện mật khẩu
    shPass.addEventListener("click", function () {
        if (shPass.classList.contains("fa-eye")) {
            shPass.classList.remove("fa-eye");
            shPass.classList.add("fa-lock");
            pass.type = "text";
        } else {
            shPass.classList.add("fa-eye");
            shPass.classList.remove("fa-lock");
            pass.type = "password";
        }
    });

    //Kiểm tra trước khi gửi
    function validateForm() {
        var submit = true;

        if (pass.value === "") {//Mật khẩu không rỗng
            document.getElementById("warnPassNull").style.display = "block";
            submit = false; 
        } else {
            document.getElementById("warnPassNull").style.display = "none";
        }
        if (user.value === "") {//Tên không rỗng
            document.getElementById("warnUserNull").style.display = "block";
            submit = false;
        } else {
            document.getElementById("warnUserNull").style.display = "none";
        }

        return submit;
    }
</script>

